    <script>
      $("div.image-container").delay(850).fadeOut("slow");
      $("#gheemove").click(function () {
        $("html,body").animate(
          {
            scrollTop: $("#ghee").offset().top,
          },
          "slow"
        );
      });
      $("#buttermove").click(function () {
        $("html,body").animate(
          {
            scrollTop: $("#butter").offset().top,
          },
          "slow"
        );
      });
      $(".cart").click(function(){
        var cart_item_id = $(this).attr('cart-item-id');
        $.ajax({
          type: "GET",
          url: "addcart",
          data: {
            cart_id : cart_item_id,
          },
          success:function(data){
            if(data == "0"){
              alert("Please signin to purchase !")
              window.location.href="login";
            } 
            else{
            alert("Item added !");
            }
          },
        }) 
      })
    </script>
    <script>
      function showMenu() {
        var show = document.getElementById("showOverlay");
        var icon = document.getElementById("burgericon");

        if (show.style.display == "inline") {
          show.style.display = "none";
        } else {
          show.style.display = "inline";
        }
      }
      $.each($("*"), function () {
        if ($(this).width() > $("body").width()) {
          console.log("Wide Element: ", $(this), "Width: ", $(this).width());
        }
      });
      function showMore() {
        var butter = document.getElementById("butter");
        var showless = document.getElementById("showless");
        var showmore = document.getElementById("showmore");
        butter.style.display = "block";
        showless.style.display = "block";
        showmore.style.display = "none";
      }
      function showLess() {
        var butter = document.getElementById("butter");
        var showmore = document.getElementById("showmore");
        var showless = document.getElementById("showless");
        butter.style.display = "none";
        showmore.style.display = "block";
        showless.style.display = "none";
      }
    </script>
