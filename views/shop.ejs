      <div class="shopContainer1" id="ghee">
        <% var gCount = 0 %> 
        <% for (var i = 0; i < objItem.length; i++) { %>
          <% if (objItem[i].category == "ghee") { %> 
            <% gCount = gCount+1 %> 
          <% } %>
        <% } %>
        <% if (gCount > 0) { %>
        <h1>OUR AVAILABLE GHEE PRODUCTS </h1>
        <% } else { %>
          <h1>CURRENTLY GHEE PRODUCTS IS NOT AVAILABLE</h1>
        <% } %>
        <div class="wrapper">
          <% for (var i = 0; i < objItem.length; i++) { %>
            <% if (objItem[i].category == "ghee") { %>
          <div class="box">
            <div class="imgContainer">
              <img src = <%= objItem[i].productimg %> />
            </div>
            <div class="textContainer">
