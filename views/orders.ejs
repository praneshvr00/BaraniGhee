    <div class="ordContainer">
        <div class="wrapper">
          <% if(orderItem.length == 0) { %>
            <h3> You have no orders in way !</h3>
          <% } %>
        <% for (var i = 0; i < orderItem.length; i++) { %>
          <div class="box" id="cartData">
            <div class="imgContainer">
              <img src= <%= orderItem[i].productimg %> width="100px" height="100px">
            </div>
            <div class="desc">
              <h3><b>Description:</b> </h3>
              <h5><b>Category:</b> <%= orderItem[i].category %></h5>
              <h5><b>Quantity:</b> <%= orderItem[i].quantity %> ml/l</h5>
            </div>
            <div class="price">
              <h4 style="margin: 3px;"><b>Shipped Details</b></h4> 
              <h6 style="margin: 0;"><%= orderItem[i].address %> </h6>
              <h6 style="margin: 0;"><%= orderItem[i].pincode %> </h6>
              <h6 style="margin: 0;"><%= orderItem[i].city %> </h6>
              <h6 style="margin: 0;"><%= orderItem[i].state %> </h6>
            <h4 style="margin: 3px;"><b>Amount Paid:</b></h4><h6 style="margin: 0;"><%= orderItem[i].amount %></h6>
            </div>
         </div>
            <% } %>
